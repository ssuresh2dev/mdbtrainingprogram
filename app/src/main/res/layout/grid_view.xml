<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/pokemonImageView"
            android:alpha="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pokemonTextView"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="#000"
            app:layout_constraintRight_toRightOf="@+id/pokemonImageView"
            app:layout_constraintTop_toTopOf="@+id/pokemonImageView"
            app:layout_constraintBottom_toBottomOf="@+id/pokemonImageView"
            app:layout_constraintLeft_toLeftOf="@+id/pokemonImageView" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>