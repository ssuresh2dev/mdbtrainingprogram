<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/eventImageView"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Event Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventTitleTextView"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="187dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/eventImageView"
                android:layout_toEndOf="@+id/eventImageView"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1" />

            <TextView
                android:text="Created by john@email.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventUserTextView"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/eventTitleTextView"
                android:layout_alignStart="@+id/eventTitleTextView"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1" />

            <TextView
                android:text="0 People Interested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventInterestedTextView"
                android:layout_below="@+id/eventUserTextView"
                android:layout_alignLeft="@+id/eventUserTextView"
                android:layout_alignStart="@+id/eventUserTextView"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1" />

        </android.widget.LinearLayout>
    </android.widget.LinearLayout>

</android.support.v7.widget.CardView>