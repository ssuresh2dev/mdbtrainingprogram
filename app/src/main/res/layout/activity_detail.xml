<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_blue"
    android:orientation="vertical"
    tools:context="com.demo.mdb.mdbsocials.DetailActivity">

    <TextView
        android:text="Event Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|normal"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:id="@+id/eventTitleTextView" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/eventImageView"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white" />

    <CheckBox
        android:text="Interested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:id="@+id/interestedCheckBox"
        android:checked="false" />

    <TextView
        android:text="Created by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:id="@+id/eventUserTextView" />

    <TextView
        android:text="This is the description."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textSize="18sp"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:id="@+id/eventDescriptionTextView" />

    <Button
        android:text="0 people interested"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="19sp"
        android:textAlignment="center"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:id="@+id/eventInterestedButton" />

</LinearLayout>
